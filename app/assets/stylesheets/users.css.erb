.signup-page {
  width: 45rem;
  padding-top:5rem ;
  margin: auto;
}

.signup-page h2{
  font-size: 2.5rem;
  font-weight:bold;
  text-align: center;
  padding-bottom:3rem;
  opacity:0.6;
}
.form {
  background: #FFFFFF;
  width: 55rem;
  margin: 0 auto 10rem;
  padding: 4.5rem;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}

.user-edittitle{
  font-size:2rem;
}

#name-space{
  height:7rem;  
  font-size:1.8rem;
}

#introduction-space{
  height:16rem;
  font-size:1.8rem;
}

.form input,textarea {
  outline: 0;
  background: #f2f2f2;
  width: 100%;
  border: 0;
  margin: 1rem 0 3rem;
  padding: 1.5rem;
  box-sizing: border-box;
  font-size: 1.4rem;
}

#signup-button {
  outline: 0;
  background-color: #f17509;
  width: 100%;
  padding: 1.5rem;
  color: #FFFFFF;
  font-size: 1.6rem;
  transition: all 0.3 ease;
  cursor: pointer;
}

.form button:hover,.form button:active,.form button:focus {
  background: #43A047;
}

/* show画面 */
.title-bar{
  font-size:2.6rem;
  font-weight: bold;
  width: 100%;  
  line-height:7rem;
  background-color:rgba(249, 171, 93,0.7);
  text-align:center;
}

.title-bar2{
  font-size:3rem;
  font-weight: bold;
  width: 30%;  
  text-align:center;
  padding-bottom:1rem;
  margin: 0 auto;
  border-bottom:0.4rem solid rgb(236, 156, 102);
}

.edit-logout{
  padding-left:30rem;
}

/* マイページ */

.mypage-post{
  background-image: url(<%= asset_path 'topimage3.jpeg' %>);
  padding:5rem 0;
}

.user-page{
  height:45rem;
  margin:0 auto ;
}

.user-info{
  width:50%;
  margin:0 auto ;
  margin-top:5rem;
  margin-bottom:5rem;
}

.user-topinfo {
  display:flex;
  justify-content:start;
  margin-top:4rem;
  margin-left:10rem;
}

.profile-icon{
  float:left;
  width:12rem;
  height:12rem;
  border:3px solid #9a9a9aa3 ;
  border-radius:80px;
}

.user-topinfo h3{
  font-size:2.5rem;
  margin-left:1.5rem;
  padding-top:1.5rem;
}

#edit-btn {
  height:5.3rem;
  font-size:2rem;
  font-weight:bold;
  color: #FFFFFF;
  padding:1.2rem 1.5rem;
  margin:1rem 0 0 2rem;
  border-radius:26px;
  background-color: rgb(236, 156, 102);
}

/* フォロー追加のボタン */
.followbutton{
  height:5.3rem;
  font-size:1.9rem;
  font-weight:bold;
  color: #FFFFFF;
  padding:1.2rem;
  padding-top:1.5rem;
  margin:1rem 0 0 2rem;
  border-radius:26px;
  background-color: rgb(236, 156, 102);
}
  
  /* フォロー中のボタン */
.unfollowbutton{
  height:5.3rem;
  font-size:1.9rem;
  font-weight:bold;
  color: #FFFFFF;
  padding:1.2rem;
  margin:1rem 0 0 2rem;
  border-radius:26px;
  background-color: rgb(236, 156, 102);
}

.self-introduction{
  font-size:2.5rem;
  width:80%;
  height:17rem;
  padding:1rem 0 0 1rem;
  margin:2rem auto 0;
  border: 2px solid ; 
  border-radius:30px;
  overflow-y: scroll;
} 

#image-input{
  height:7rem;
  font-size:1.8rem;
}

/* プレビュー画像 */
#image-preview{
  display:none;
  max-width: 15rem;
  max-height: 15rem;
  border-radius:80px;
  margin-bottom:2.5rem;
}

.user-status{
  display:flex;
  justify-content:space-around;
  width:80%;
  margin-left:8rem;
}

.status-count{
  margin:3rem 0 0 2rem;
  font-size:3.5rem;
  font-weight: bold;
  font-style: italic;
}

.status-title{
  margin:1rem 0 0 1rem;
  font-size:2rem;
}

/* user一覧 */
.users {
  list-style: none;
  margin: 0; 
  display:block;
}

.users li {
  font-size:2rem;
  display:flex;
  width:70%;
  margin:2rem auto;
  overflow: auto;
  padding: 1rem;
  border-bottom: 1px solid #dad8d8;
}

#user-index-icon{
  width:6rem;
  height:6rem;
  border:2px solid #bfbeb2;
  border-radius:80px; 
}

.user-index-name{
  margin:3rem 3rem 0 1.5rem;
  width:18rem;
}

.user-index-selfintro{
  margin:1rem 3rem 3rem 1.5rem;
  width:50rem;
}

.users-follow {
  display: flex;
  width:5rem;
}

/* ユーザーの投稿、いいねした投稿 */
.no-post{
  text-align: center;
  font-size:3rem;
  margin-top:4rem;
}