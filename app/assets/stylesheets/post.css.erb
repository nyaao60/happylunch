#post-review{
  width:510px;
  height:200px;
  padding:10px ;
  margin-top:10px;
  border: 2px solid #b8b7b7; 
  border-radius:5px;
  overflow-y: scroll;   
}

/* 投稿作成画面 */
.posting-page{
  width: 600px;
  padding: 50px 0px 0px 0px;
  margin: auto;
  font-size: 20px;
  font-weight:400;
}

.posting-page h2{
  font-size: 25px;
  font-weight:bold;
  text-align: center;
  padding-bottom:30px;
  opacity:0.6;
}

.make-form{
  background: #fcfaf8;;
  max-width: 6000px;
  margin: 0 auto 60px;
  padding: 45px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}


.make-form input,textarea,select {
  width: 100%;
  outline: 0;
  background: #f2f2f2;
  border: 0;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}

#price-box{
width:30%;
}

#check-box{
display:inline-block;
width:20px;
height:20px;
margin: 10px;
padding: 0px;
background-color: #f0bb86;
border:1px solid;
border-color:rgba(42, 42, 42,0.6);
border-radius:5px;
}

.make-form p{
margin-top:15px;
}

/* 新規作成、編集時のレビュー欄 */
#review-comment{
height:180px;
display: inline-block;
}

/* 投稿詳細 */

.post-edit{
  display:flex;
  justify-content: flex-end;
  margin:0 20px 20px 0;
}

#post-edit-btn{
  font-size:15px;
  width: 60px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;  
  font-size:15px;
}

#post-delete-btn{
  font-size:15px;
  width: 60px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;
  margin-left:10px;
}


/* 投稿に係る投稿者情報 */
.reviewer-info{
display:flex;
justify-content: flex-end;
margin-right:25px;
}


#reviewer-icon{
  width:30px;
  height:30px;
  border:2px solid #bfbeb2;
  border-radius:80px;
  margin:0 0 0 10px;
}

/* 投稿情報関連 */
.review-info{
display:flex;
}

/* 店名と評価を並べる */
.post-top{
display:flex;
}

#post-notimage{
width:80%;
}

/* ランチ情報bar */
#lunch-info{
  font-size:17px;
  font-weight: bold;
  width: 100%;  
  line-height:50px;
  background-color:rgba(249, 171, 93,0.7);
  text-align:center;  
  border-radius:10px;
  margin-bottom:10px;
}
.fa-utensils{
margin-left:5px;
}
.shop-info{
font-weight: bolder;  
}

/* 投稿画像 */
#post-file{
  width:220px;
  height:220px;
  display:inline-block;  
  border:2px solid #bfbeb2;
  margin:15px 10px 10px 0;
}

/* map機能 */
#map {
  height: 250px;
  width: 500px;
  margin:10px 0;
}

/* コメント機能 */
.comment-box{
  width:100%;
  font-size:14px;
}

/* コメント一覧 */
.comment h4{
  font-size:16px;
  border-bottom: 1px solid rgba(184, 183, 183,0.6); 
  padding-bottom:5px;
;}

/* コメントヘッダー */
.comment-header{
  width:100%;
  display:flex;
  margin-top:10px;
}

.comment-header-left{
  width:100%;
  display:flex;
  justify-content: flex-start;  
}

.comment-header-right{
  width:100%;
  display:flex;
  justify-content: flex-end;  
}

/* コメント投稿者アイコン */
#commenter-icon{
  width:30px;
  height:30px;
  border:2px solid #bfbeb2;
  border-radius:80px;
}

/* 削除ボタン */
#comment-delete-btn{
  font-size:12px;
  width: 40px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;
  margin-right:15px; 
}

/* いいねボタン関連 */
.unliked-btn {
  color: #8899a6;
}

.liked-btn {
  color: #ff2581;
  font-size:25px;
}

/* コメント内容 */
#comment-content{
border-bottom: 1px solid rgba(184, 183, 183,0.6);
padding:10px 0 20px 0;
}


/* コメント入力欄 */
#comment-input-field{
  background-color: #f2f2f2;
  width: 100%;
  border: 1px solid #b8b7b7; 
  border-radius:5px;
  margin: 20px 0 10px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}

/* コメントボタン */
#comment-button{
  display:block;
  font-size: 14px;
  color: #FFFFFF;
  background-color: #f17509;
  width: 120px;
  height:35px;
  padding: 5px;
  transition: all 0.3 ease;
  cursor: pointer;
  margin:0 0 0 auto;
  border-radius:5px;
}

/* いいね、コメント数表示 */
.post-subinfo{
display: flex;
justify-content: flex-end;
}

.comment-icon{
font-size: 25px;  
}

.comment-count{
margin-left:20px;  
}

/* 検索 */
.search{
width:70%;
margin:250px  auto 0;
/*border:1px solid  rgba(0, 0, 0,0.6);*/
padding:30px;
background-color:rgba(255,255,255,0.9);
border-radius:50px
} 

.search-part{
  height:500px;  
  background-image: url(<%= asset_path 'topimage2.jpeg' %>);
  background-color:rgba(255,255,255,0.1);
  background-blend-mode:lighten;
  background-position: center;
  background-repeat: no-repeat;
}

.search-part h3{
  font-size:30px;
  color:black;
  font-weight:bold;
  text-align:center;
  font-family: 'Kiwi Maru', serif;  
}

.search-form{
display: flex;
}

.basic-btn{
  font-size:15px;
  width: 60px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:5px;
  padding:5px 5px;  
  font-size:15px;
}


.search-location{
width:50%;  
font-size:19px;
border: 1px solid;
}

#keyword{
  font-size:15px;
  width:30%;
  margin:0 20px;
  background-color: #FFFFFF;
  border: 1px solid;
}

#get_current_spot{
width:30%;
height:50px;
display: block;
margin: auto;
margin-top:2%;
}


.posts {
  list-style: none;
  margin:40px 0 0 0; 
  display:block;
}

/* １投稿 */
.post-form {
  margin:20px auto;
  width:70%;
  font-size:20px;
  font-weight: bold;
  overflow: auto;
  padding: 20px;
  border: 3px solid  rgba(53, 52, 52, 0.501);
  background-color:#FAF4EF;
  border-radius:10px;
}
.posts li a{
padding-left:0; 
}
.posts li p{
margin-bottom:5px;  
}

.post-search-time{
text-align: right;  
margin-top:10px;
}

.post-search-star{
margin-left:10px;
}

.post-search-body{
  padding:15px 10px;
  height:150px;
  border-radius:5px;
  border:1px solid; 
  overflow-y: scroll;  
  margin-bottom:10px;
  width:100%;
}


/* selectの矢印を復活させる */
select {
  -moz-appearance: menulist-button;
  -webkit-appearance: menulist-button;
  appearance: menulist-button;
}



/* HOME画面のpost */
.home-titlebar{
  font-size:17px;
  font-weight: bold;
  width: 200px;  
  line-height:60px;
  border-radius:100px;
  background-color:rgba(231, 221, 163, 0.71);
  text-align:center;
  margin: 20px  auto 0;
  padding:0 10px;

}

.home-posts{
  flex-wrap: wrap; 
  margin:  20px  auto;
  width:100%;
  justify-content:space-between; 
  row-gap:20px;
  /* column-gap:10px */
  font-weight:bold;
}



  .home-posts p{
  margin:5px 0;  
  }

  /* HOMEに存在する投稿 */
.reviewer-info-top{
  display:flex;
  justify-content: flex-end;
  margin:0 10px 15px 0;
}

.reviewer-info-top a{
  padding:0;
}

#reviewer-icon-top{
  width:30px;
  height:30px;
  margin-left:10px;
  border:2px solid #bfbeb2;
  border-radius:80px;
}

.post-search-top a{
  padding:0 0 0 5px ;
}