  opacity: 0.8;
  transition: all 0.1s ease-in-out;
}

.registerbtn:hover{
  background-color:rgb(255,138,43); 
}


.registerbtn:active{
  transform: scale(0.95); 
}

.description-title span{
  font-size:2.5rem;
  font-weight:bold;
}

/* 検索枠（背景含む） */
.search-part{ 
  background-image: url(<%= asset_path 'topimage2.jpeg' %>);
  background-size:cover;
  background-color:rgba(255,255,255,0.1);
  background-blend-mode:lighten;
  background-position: center;
  background-repeat: no-repeat;
  padding-bottom:4rem;
}

.search-part h3{
  color:rgb(238,208,152);
}

/* 検索フォーム */
.search{
  margin:44rem  auto 0;
  width:82%;
  padding:3rem;
  background-color:rgba(255,255,255,0.7);
  border-radius:50px;
} 

/* 検索条件 */
.search-conditions{
  display: flex;
}

/* 現在地等入力欄 */
.search-location{
  width:50%;  
  font-size:1.9rem;
  font-weight:bold;
  border: 1px solid;
}

/* 現在地取得欄 */
#get_current_spot{
  list-style:none;
  border: solid 1px;
  border-left:none;
  padding-top:0.5rem;
  padding-right:1rem;
}

/* 現在値取得フォント */
.fa-location-arrow{
  margin-right:2rem;
  font-size:2.5rem;
  margin-left:2rem;
  transition: all 0.1s ease-in-out;
}

.fa-location-arrow:hover{
  color:rgb(255,168,55); 
}

.fa-location-arrow:active{
  transform: scale(0.7);
}

.search-spot{
  text-align:center;
}

/* 現在値取得アニメーション */
@keyframes blink {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

#current_spot.loading {
  animation: blink 1s linear infinite;
}


/* 現在地取得文字 */
#current_spot{
  font-size:1.2rem;
  font-weight:bold;
  margin-left:1rem;
}

.locate-caution{
  font-size:1rem;
}

