/* 検索枠（背景含む） */
.search-part{ 
  background-image: url(<%= asset_path 'topimage2.jpeg' %>);
  background-color:rgba(255,255,255,0.1);
  background-blend-mode:lighten;
  background-position: center;
  background-repeat: no-repeat;
  padding-bottom:4rem;
}

.search-part h3{
  font-size:3rem;
  color:black;
  font-weight:bold;
  text-align:center;
  font-family: 'Kiwi Maru', serif;  
}

/* 検索フォーム */
.search{
width:70%;
margin:25rem  auto 0;
padding:3rem;
background-color:rgba(255,255,255,0.9);
border-radius:50px
} 

/* 検索条件 */
.search-conditions{
display: flex;
}

/* 現在地等入力欄 */
.search-location{
width:50%;  
font-size:1.9rem;
font-weight:bold;
border: 1px solid;
}

/* 現在地取得欄 */
#get_current_spot{
width:12%;
list-style:none;
border: solid 1px;
border-left:none;
padding-top:0.5rem;
}
/* 虫眼鏡フォント */
.fa-magnifying-glass-location{
font-size:3rem;
margin-left:2rem;
}

/* 現在地取得文字 */
#current_spot{
font-size:1.2rem;
margin-left:1rem;
}

/* 検索条件 */
#keyword{
  font-size:1.6rem;
  font-weight:bold;
  width:30%;
  margin:0 2rem;
  background-color: #FFFFFF;
  border: 1px solid;
}


/*投稿検索ボタン */
#post-search-btn{
  height:60px;
  width:40%;
  font-size:2rem;
  color: #FFFFFF;
  display:block;
  padding:0.5rem;  
  margin: 2rem auto 0;
  border-radius:40px;
  background-color:rgb(242,148,35)
}

/*投稿検索アイコン */
.fa-search{
padding-right:1rem;
}

/*みんなの投稿欄*/
.home-posts{
  flex-wrap: wrap; 
  margin:  2rem  auto;
  row-gap:4rem;
  font-weight:bold;
  display:block;
}

/*タイトルバー*/
.home-titlebar{
  font-size:3rem;
  font-weight: bold;
  width: 20%;  
  text-align:center;
  padding-bottom:1rem;
  margin: 0 auto;
  border-bottom:4px solid rgb(236, 156, 102);
}

/*投稿*/
.post-form {
  font-size:2rem; 
  font-weight: bold;
  width:min(70%,1000px);
  padding: 2rem;
  margin:2rem auto;
  overflow: auto;
  border: 0px solid  rgba(255,255,255);
  background-color:#FAF4EF;
  border-radius:180px;
}

/* 投稿に係る投稿者情報 */
.reviewer-info{
display:flex;
justify-content: flex-end;
margin-right:25px;
}
/* 画像、情報を並べる */
.review-info{
display:flex;
}

#post-notimage{
width:60%;
margin-left:6rem;
}


/* 投稿画像 */
#post-file{
  width:min(18vw,240px);
  height:min(18vw,240px);
  display:inline-block;  
  border-radius:50px;
  margin:0 4rem   0 4rem;
}

/* おすすめと評価を並べる */
.post-top{
display:flex;
width:100%;
}


.post-recommend{
margin-top:1.5rem;
}

.post-star{
margin-left:1rem;
}

.star1{
color:rgb(243,154,48);
}

.star2{
opacity:0.4;
}

.post-price-yen{
margin-left:5rem;
}

.post-price{
font-size:4rem;
}

.post-storename{
font-size:2.5rem;
text-decoration: underline;
margin-bottom:1rem;

}

.post-lunchname{
font-size:1.7rem;
}

.post-lunchname span{
font-size:2rem;
background-color:rgb(224,214,111);
}

.post-search-body{
  font-size:1.7rem;
  padding:1.5rem 0;
  max-height:9rem;
  max-width:40rem;
  overflow-y: scroll;  
  margin-bottom:1rem;
  width:100%;
}

/* いいね、コメント数表示 */
.post-subinfo{
display: flex;
margin-top:2rem;
}

.post-subinfo-left{
display:flex;
margin-left:8rem;
width:100%;
}

.post-subinfo-address{
font-size:1.8rem;
margin-top:1rem;
}

.post-subinfo-right{
display:flex;
margin-right:16rem;
justify-content: flex-end;
width:100%;
}

.post-subinfo-right p{
font-size:2.8rem;
}

.likes-count{
margin-right:2rem;
}

.comment-icon{
font-size: 2.5rem;  
opacity:0.6;
}

.comment-count{
margin-left:2rem;  
}

.post-search-time{
font-size:1.8rem;
text-align: right;  
margin-right:14rem;
}


#post-review{
  width:510px;
  height:200px;
  padding:10px ;
  margin-top:10px;
  border: 2px solid #b8b7b7; 
  border-radius:5px;
  overflow-y: scroll;   
}

/* 投稿作成画面 */
.posting-page{
  width: 600px;
  padding: 50px 0px 0px 0px;
  margin: auto;
  font-size: 20px;
  font-weight:400;
}

.posting-page h2{
  font-size: 25px;
  font-weight:bold;
  text-align: center;
  padding-bottom:30px;
  opacity:0.6;
}

.make-form{
  background: #fcfaf8;;
  max-width: 6000px;
  margin: 0 auto 60px;
  padding: 45px;
  text-align: left;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}


.make-form input,textarea,select {
  width: 100%;
  outline: 0;
  background: #f2f2f2;
  border: 0;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}

#price-box{
width:30%;
}

#check-box{
display:inline-block;
width:20px;
height:20px;
margin: 10px;
padding: 0px;
background-color: #f0bb86;
border:1px solid;
border-color:rgba(42, 42, 42,0.6);
border-radius:5px;
}

.make-form p{
margin-top:15px;
}

/* 新規作成、編集時のレビュー欄 */
#review-comment{
height:180px;
display: inline-block;
}

/* 投稿詳細 */

.post-edit{
  display:flex;
  justify-content: flex-end;
  margin:0 20px 20px 0;
}

#post-edit-btn{
  font-size:15px;
  width: 60px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;  
  font-size:15px;
}

#post-delete-btn{
  font-size:15px;
  width: 60px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;
  margin-left:10px;
}

#reviewer-icon{
  width:30px;
  height:30px;
  border:2px solid #bfbeb2;
  border-radius:80px;
  margin:0 0 0 10px;
}


/* ランチ情報bar */
#lunch-info{
  font-size:17px;
  font-weight: bold;
  width: 100%;  
  line-height:50px;
  background-color:rgba(249, 171, 93,0.7);
  text-align:center;  
  border-radius:10px;
  margin-bottom:10px;
}
.fa-utensils{
margin-left:5px;
}
.shop-info{
font-weight: bolder;  
}



/* map機能 */
#map {
  height: 250px;
  width: 500px;
  margin:10px 0;
}

/* コメント機能 */
.comment-box{
  width:100%;
  font-size:14px;
}

/* コメント一覧 */
.comment h4{
  font-size:16px;
  border-bottom: 1px solid rgba(184, 183, 183,0.6); 
  padding-bottom:5px;
;}

/* コメントヘッダー */
.comment-header{
  width:100%;
  display:flex;
  margin-top:10px;
}

.comment-header-left{
  width:100%;
  display:flex;
  justify-content: flex-start;  
}

.comment-header-right{
  width:100%;
  display:flex;
  justify-content: flex-end;  
}

/* コメント投稿者アイコン */
#commenter-icon{
  width:30px;
  height:30px;
  border:2px solid #bfbeb2;
  border-radius:80px;
}

/* 削除ボタン */
#comment-delete-btn{
  font-size:12px;
  width: 40px;
  background-color: rgb(236, 156, 102);
  color: #FFFFFF;
  border-radius:30px;
  padding:5px 5px;
  margin-right:15px; 
}

/* いいねボタン関連 */
.unliked-btn {
  color: #8899a6;
}

.liked-btn {
  color:rgba(232,104,139);
  font-size:2rem;
  opacity:0.9;
  margin-top:2rem;
  margin-right:1.5rem;
}

/* コメント内容 */
#comment-content{
border-bottom: 1px solid rgba(184, 183, 183,0.6);
padding:10px 0 20px 0;
}


/* コメント入力欄 */
#comment-input-field{
  background-color: #f2f2f2;
  width: 100%;
  border: 1px solid #b8b7b7; 
  border-radius:5px;
  margin: 20px 0 10px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}

/* コメントボタン */
#comment-button{
  display:block;
  font-size: 14px;
  color: #FFFFFF;
  background-color: #f17509;
  width: 120px;
  height:35px;
  padding: 5px;
  transition: all 0.3 ease;
  cursor: pointer;
  margin:0 0 0 auto;
  border-radius:5px;
}


.posts {
  list-style: none;
  margin:40px 0 0 0; 
  display:block;
}

/* １投稿 */

.posts li a{
padding-left:0; 
}
.posts li p{
margin-bottom:5px;  
}

  /* HOMEに存在する投稿 */


.reviewer-info-top{
  display:flex;
  justify-content: flex-end;
  margin:0 15rem 1.5rem 0;
}


/* selectの矢印を復活させる */
select {
  -moz-appearance: menulist-button;
  -webkit-appearance: menulist-button;
  appearance: menulist-button;
}



/* HOME画面のpost */
.home-everyone-post{
background-image: url(<%= asset_path 'topimage3.jpeg' %>);
}





.reviewer-info-top a{
  padding:0;
}

#reviewer-icon-top{
  width:30px;
  height:30px;
  margin-left:10px;
  border:2px solid #bfbeb2;
  border-radius:80px;
}

.post-search-top a{
  padding:0 0 0 5px ;
}