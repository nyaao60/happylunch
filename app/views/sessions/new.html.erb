 <% provide(:titlebar, "ログイン画面") %>
<div class="login-page">
  <div class="login-page-form">
    <%= form_with(url: login_path,scope: :session,local: true) do |f| %>
      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email %>
      <%= f.label :password,"パスワード" %>
      <%= f.password_field :password %>
      <%= f.check_box :remember ,id:"remember-box" %>
      <%= f.label :remember,"次回から自動的にログインする。" %>
      <%= f.submit "ログイン",id:"signup-button" %>
      <hr class="hr1">
      <div  class="guest-user-login">
        <h3>    
          <%= link_to 'ユーザー登録せずに機能を試したい方はこちら', guest_path, method: :post,id:"password-forgot"%>
        </h3>
      </div>
    <% end %>
  </div>
</div>