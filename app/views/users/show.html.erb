<p class="title-bar">マイページ</p>
<div class="user-page"> 
  <p> <%= image_tag @user.user_image.thumb.url,class:'profile-icon' %> </p>
  <div class="user-info">
    <div class="user-edit">
      <h3><%= @user.name %> </h3>
      <% if current_user == @user%>
        <%= button_to "編集", edit_user_path(current_user), { method: :get, id:"edit-btn"} %>
      <%end%>
    </div>
    <h3 style="white-space:pre-wrap;" class="self-introduction"><%= @user.self_introduction %></h3>
  </div>
</div>