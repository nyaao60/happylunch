<header>
    <% if logged_in? %>
        <div class="header-title">
        <h1><a href="#">ハピランチ</a></h1>
        <div class="logo"><%= link_to image_tag('/assets/ロゴ.png'),root_path, {class: "logo-image"}%></div>
        </div>
        <nav>
            <ul>
                <li>
                <div class="header-image"><%= link_to image_tag("/assets/投稿.png"),'#' %></div>
                <p class="header-text">投稿</p>
                </li>
                <li>
                <div  class="header-image"><%= link_to image_tag("/assets/マイページ.png"),
                user_path(current_user) %></div>
                <p class="header-text">マイページ</p>
                </li>           
            </ul>
        </nav>
    <%else%>
        <div class="header-title">
        <h1><a href="#">ハピランチ</a></h1>
        <div class="logo"><%= link_to image_tag('/assets/ロゴ.png'),root_path, {class: "logo-image"}%></div>
        </div>
        <nav>
            <ul>
                <li class="header-login">
                <div  class="header-image"><%= link_to image_tag("/assets/マイページ.png"),login_path %></div>
                <p class="header-text">ログイン</p>
                </li>           
            </ul>
        </nav>
    <%end%>
</header>