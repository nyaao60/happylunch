<% unless current_user == @user%>
  <% if current_user.following?(@user) %>
    <%= link_to relationship_path(@relationship.id),method:"delete" do %>
    <p class="unfollowbutton"> フォロー中</p>
    <%end%> 
  <%else%>
    <%= link_to relationships_path(followed_id:@user),method:"post" do %>
      <p class="fa-solid fa-user-plus followbutton">
    フォロー</p>
    <%end%>
  <%end%>
<%end%> 