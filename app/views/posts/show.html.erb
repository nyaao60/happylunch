<p class="title-bar">投稿詳細</p>
<div class="posting-page">
  <div class="post-form"> 
    <div class="post-show-page">
      <div class="reviwer">
        <p class="reviewer-info">
        投稿者:
        <%= link_to image_tag(@user.user_image.thumb.url,id:"reviewer-icon"),user_path(@user) %>
        <%=@user.name%></p>
      </div>        
    <div class="post-edit">
      <p>店名：<%= @post.store_name%></p>
      <% if current_user == @user%>
        <%= button_to "編集", edit_post_path(@post), { method: :get, id:"edit-btn"} %>
      <%= button_to "削除", post_path(@post),  { method: :delete, id:"edit-btn"} %>
      <% end %>
    </div>

    <% if @post.post_images.present? %>
      <% @post.post_images.each do |image|%>
      <%= image_tag image.to_s %>
      <% end %>
    <%end%>

    <p>住所：<%= @post.adress%></p>
    <p>価格：<%= @post.price%>円</p>
    <p>評価：<%= render 'layouts/five_star_rating' %></p>
    <p>野菜豊富：<%= @post.lots_of_vegetables%></p>
    <h3 style="white-space:pre-wrap;" id="post-review"><%= 
    @post.body %></h3>
    </div>
  </div>
</div>  
